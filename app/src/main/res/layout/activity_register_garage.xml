<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registerpagebackground"
    tools:context=".RegisterGarage">

    <TextView
        android:id="@+id/signUpTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="235dp"
        android:text="Garage Sign Up"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/garageUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUpTitle"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="35dp"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="20dp"
        android:drawableTint="#8c8c8c"
        android:hint="Username"
        android:paddingLeft="2dp"
        android:paddingTop="17dp"
        android:paddingRight="5dp"
        android:paddingBottom="20dp"
        android:textColor="@color/black"
        android:textColorHint="#8c8c8c" />

    <TextView
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:gravity="right"
        android:text="you can't change your username later."
        android:layout_below="@+id/garageUserName"
        android:textColor="#ff3333"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/garageEmail"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawableTint="#8c8c8c"
        android:drawablePadding="20dp"
        android:hint="Email Address"
        android:paddingLeft="2dp"
        android:paddingBottom="20dp"
        android:paddingRight="5dp"
        android:paddingTop="17dp"
        android:textColor="@color/black"
        android:textColorHint="#8c8c8c" />

    <EditText
        android:id="@+id/garageMobilenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/garageEmail"
        android:inputType="number"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="35dp"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:drawableTint="#8c8c8c"
        android:drawablePadding="20dp"
        android:hint="Mobile Number"
        android:paddingLeft="2dp"
        android:paddingBottom="20dp"
        android:paddingRight="5dp"
        android:paddingTop="17dp"
        android:textColor="@color/black"
        android:textColorHint="#8c8c8c" />

    <EditText
        android:id="@+id/garagePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/garageMobilenumber"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="35dp"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:longClickable="false"
        android:drawableTint="#8c8c8c"
        android:drawablePadding="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="2dp"
        android:paddingBottom="20dp"
        android:paddingRight="10dp"
        android:paddingTop="17dp"
        android:textColor="@color/black"
        android:textColorHint="#8c8c8c" />

    <ImageView
        android:id="@+id/showPassword"
        android:layout_width="22dp"
        android:layout_height="25dp"
        android:layout_below="@+id/garageMobilenumber"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="300dp"/>

    <EditText
        android:id="@+id/garageRePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/garagePassword"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="35dp"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:longClickable="false"
        android:drawableTint="#8c8c8c"
        android:drawablePadding="20dp"
        android:hint="Re-enter Password"
        android:inputType="textPassword"
        android:paddingLeft="2dp"
        android:paddingBottom="20dp"
        android:paddingRight="10dp"
        android:paddingTop="17dp"
        android:textColor="@color/black"
        android:textColorHint="#8c8c8c" />

    <ImageView
        android:id="@+id/showRePassword"
        android:layout_width="22dp"
        android:layout_height="25dp"
        android:layout_below="@+id/garageRePassword"
        android:layout_marginTop="-45dp"
        android:layout_marginLeft="300dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGarageSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/gradentbutton"
        android:text="Sign Up"
        android:textColor="#fff"
        android:textSize="18dp"
        android:layout_below="@+id/garageRePassword"/>

    <TextView
        android:id="@+id/terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Privacy Policies -"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_below="@+id/btnGarageSignUp"
        android:textColor="#ff1a1a"
        android:layout_marginTop="15dp"/>

</RelativeLayout>