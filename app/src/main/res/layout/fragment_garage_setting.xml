<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/settingbackground"
    tools:context=".GarageSettingFragment">

    <TextView
        android:id="@+id/settingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="42dp"
        android:drawableLeft="@drawable/baseline_settingsweel_24"
        android:drawablePadding="10dp"
        android:drawableTint="#fff"
        android:text="Settings"
        android:textColor="#fff"
        android:textSize="28dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="350dp"
        android:layout_height="490dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#fff"
        app:cardCornerRadius="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/CardOne"
            android:layout_width="346dp"
            android:layout_height="75dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#fff">

            <TextView
                android:id="@+id/wishNote"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Hello,"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="45dp"
                android:text="SunRich Garage"
                android:textColor="#737373"
                android:textSize="15dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardTwo"
            android:layout_width="350dp"
            android:layout_height="145dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#fff">

            <TextView
                android:id="@+id/accountSetting"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#737373"
                android:textSize="14dp"
                android:text="Account Settings" />

            <LinearLayout
                android:background="@drawable/settingscreenlistbackground"
                android:clickable="true"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="35dp"
                android:padding="15dp">

                <TextView
                    android:id="@+id/editProfile"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                    android:fontFamily="@font/roboto_bold"
                    android:paddingLeft="5dp"
                    android:paddingRight="20dp"
                    android:text="Edit Profile"
                    android:textColor="#666666"
                    android:textSize="14dp" />

            </LinearLayout>


            <LinearLayout
                android:background="@drawable/settingscreenlistbackground"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:layout_marginTop="85dp"
                android:padding="15dp">

                <TextView
                    android:id="@+id/logOut"
                    android:layout_width="312dp"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="14dp"
                    android:paddingLeft="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Log out"
                    android:drawableRight="@drawable/baseline_logout_24"
                    android:paddingRight="20dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardThree"
            android:layout_marginTop="245dp"
            android:layout_width="350dp"
            android:layout_height="140dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#fff">

            <TextView
                android:id="@+id/more"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#737373"
                android:textSize="15dp"
                android:text="More" />

            <LinearLayout
                android:background="@drawable/settingscreenlistbackground"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:layout_marginTop="35dp"
                android:padding="15dp">

                <TextView
                    android:id="@+id/aboutUs"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                    android:fontFamily="@font/roboto_bold"
                    android:paddingLeft="5dp"
                    android:paddingRight="20dp"
                    android:text="About Us"
                    android:textColor="#666666"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/settingscreenlistbackground"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:layout_marginTop="85dp"
                android:padding="15dp">

                <TextView
                    android:id="@+id/privacyPolicy"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                    android:fontFamily="@font/roboto_bold"
                    android:paddingLeft="5dp"
                    android:paddingRight="20dp"
                    android:text="Privacy Policy"
                    android:textColor="#666666"
                    android:textSize="14dp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/cardFour"
            android:layout_marginTop="390dp"
            android:layout_width="350dp"
            android:layout_height="170dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#fff">

            <TextView
                android:id="@+id/other"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#737373"
                android:textSize="15dp"
                android:text="Other" />

            <LinearLayout
                android:background="@drawable/settinglogoutbutton"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:layout_marginTop="48dp"
                android:padding="15dp">

                <TextView
                    android:id="@+id/deleteAccount"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:paddingLeft="5dp"
                    android:text="Delete Account"
                    android:drawableRight="@drawable/baseline_delete_24"
                    android:textStyle="bold"
                    android:paddingRight="20dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


</RelativeLayout>